<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app_bundle.user_manager.class">AppBundle\Entity\UserManager</parameter>
        <parameter key="app_bundle.refresh_token_manager.class">AppBundle\Entity\RefreshTokenManager</parameter>
        <parameter key="app_bundle.auth_code_manager.class">AppBundle\Entity\AuthCodeManager</parameter>
        <parameter key="app_bundle.access_token_manager.class">AppBundle\Entity\JWTAccessTokenManager</parameter>
    </parameters>
    <services>
        <service id="app_bundle.access_token_manager" class="%app_bundle.access_token_manager.class%" parent="oauth2_server.jwt_access_token.manager">
            <tag name="oauth2_server.cleaner" />
        </service>

        <service id="app_bundle.user_manager" class="%app_bundle.user_manager.class%">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="fos_user.util.username_canonicalizer" />
            <argument type="service" id="fos_user.util.email_canonicalizer" />
            <argument>%fos_user.model.user.class%</argument>
            <argument type="service" id="doctrine" />
        </service>

        <service id="app_bundle.refresh_token_manager" class="%app_bundle.refresh_token_manager.class%" parent="oauth2_server.refresh_token.manager.default">
            <tag name="oauth2_server.cleaner" />
        </service>

        <service id="app_bundle.auth_code_manager" class="%app_bundle.auth_code_manager.class%" parent="oauth2_server.auth_code.manager.default">
            <tag name="oauth2_server.cleaner" />
        </service>
    </services>
</container>
